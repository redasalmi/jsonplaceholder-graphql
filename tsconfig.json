{
  "compilerOptions": {
    "lib": ["es2021", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
